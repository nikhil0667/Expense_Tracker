<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state: Only the clicked icon becomes your chosen color (e.g., green) -->
    <item android:color="@color/selected_color" android:state_checked="true" />
    <!-- Default state: All other icons will be this color (e.g., blue) -->
    <item android:color="@color/unselected_color" android:state_checked="false" />
</selector>
